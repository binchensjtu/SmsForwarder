<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="@string/pref_sms_cb_enable_key"
        android:summaryOff="@string/pref_sms_cb_enable_off_description"
        android:summaryOn="@string/pref_sms_cb_enable_on_description"
        android:title="@string/pref_sms_cb_enable_title" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_sms_et_receive_address_default"
        android:inputType="number"
        android:key="@string/pref_sms_et_receive_address_key"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_sms_et_receive_address_title" />

</PreferenceScreen>
